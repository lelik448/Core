@model Core.ViewModels.RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">

            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Новый пользователь!</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                        <input asp-for="Email" type="text" placeholder="@nameof(Model.Email)" />
                        <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                        <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />

                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
